    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <output expression="&quot;Inserisci il lato di un quadrato:&quot;" newline="True"/>
            <declare name="l, A, P" type="Real" array="False" size=""/>
            <input variable="l"/>
            <while expression="l&lt;=0">
                <output expression="&quot;E' stato inserito un numero minore di 0, inserire un numero maggiore di 0&quot;" newline="True"/>
                <input variable="l"/>
            </while>
            <output expression="&quot;Adesso calcolo l'area e il perimetro&quot;" newline="True"/>
            <assign variable="A" expression="l^2"/>
            <assign variable="P" expression="l*4"/>
            <output expression="&quot;L'area del quadrato &#232;: &quot;&amp; A" newline="True"/>
            <output expression="&quot;Il perimetro del quadrato &#232;: &quot;&amp; P" newline="True"/>
        </body>
    </function>
